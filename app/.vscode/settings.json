{
    // BARRAS DE ACTIVIDAD DE VS-CODE
    "workbench.colorCustomizations": {
        //
        // Barra Superior
        "titleBar.activeBackground": "#1E3E62", // barra superior fondo
        "titleBar.activeForeground": "#e7e7e7", //  barra superior texto
        "titleBar.border": "#1E3E6299", // barra superior borde inferior
        "commandCenter.border": "#e7e7e799", // barra superior borde cuadro de busqueda
        "titleBar.inactiveBackground": "#1E3E6299", // barra superior cuando la ventana está inactiva
        "titleBar.inactiveForeground": "#e7e7e799", // texto de la barra superior cuando la ventana está inactiva
        //
        // Barra Lateral
        "activityBar.background": "#1E3E6299", // barra lateral fondo
        "activityBar.inactiveForeground": "#e7e7e799", // barra lateral icono no seleccionado
        "activityBar.activeBackground": "#ff1493", // barra lateral seleccionado
        "activityBar.foreground": "#e7e7e7", // barra lateral icono si seleccionado
        //
        // Badge o Círculo de Actividad
        "activityBarBadge.background": "#0B192C", // barra lateral fondo del circulo badge
        "activityBarBadge.foreground": "#e7e7e7", // barra lateral número del circulo badge
        //
        // Barra inferior
        "statusBar.background": "#1E3E62", // barra inferior
        "statusBar.foreground": "#e7e7e7", // barra inferior texto
        "statusBarItem.remoteBackground": "#ff149399", // barra inferior icono esquina izquierda
        "statusBarItem.hoverBackground": "#ff1493", // barra inferior icono esquina izquierda hover
        "statusBarItem.remoteForeground": "#e7e7e7", //  barra inferior icono esquina izquierda color
        //
        // Cursor
        "editorCursor.foreground": "#ff1493", // cursor color
        "editor.lineHighlightBackground": "#1E3E6240", // fondeo de la linea en la que está el cursor
    },
    //
    // CARPETAS CON ESTILO "MATERIAL ICONS THEME"
    "workbench.iconTheme": "material-icon-theme",
    //
    // ICONOS DE CARPETA: "ASOCIACIONES CUSTOM DE CARPETAS"
    "material-icon-theme.folders.associations": {
        "c-tooltip": "prompts",
        "theme-sintra": "storybook",
        "app-style": "context",
        "design-system": "custom",
        "body": "public",
        "common-style": "css",
        "common-variables": "controller",
        "display": "ui",
        "frameworks": "storybook",
        "footer": "mock",
        "icons-style": "images",
        "material-components-v17": "angular",
        "material-components-v19": "angular",
        "plugins": "plugin",
        "primeng-components-v17": "robot",
        "primeng-components-v19": "robot",
        "theme": "theme",
        "pruebas-theme": "test",
        "web-components": "layout",
    },
    // COLOR POR DEFECTO DE CARPETA MATERIAL ICONS
    "material-icon-theme.folders.color": "#ff1493",
    //
    // AUTOGUARDADO "AUTIMÁTICO" A LOS 10 SEGUNDOS DE INACTIVIDAD
    "files.autoSave": "off",
    // "files.autoSave": "afterDelay",
    // "files.autoSaveDelay": 120000,
    //
    // CONFIGURACION DE FUENTE
    "editor.fontFamily": "Jetbrains Mono, Fira Code, Consolas, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.lineHeight": 22,
    //
    // CONFIGURACION DE LIGADURAS DE FUENTE
    "editor.fontLigatures": true,
    //
    // TEMA DE COLOR AL QUE MODIFICAMOS
    "workbench.colorTheme": "Visual Studio Dark",
    // Color de Comentarios
    "editor.tokenColorCustomizations": {
        "comments": {
            "foreground": "#A75FD6"
        }
    },
    // Comentarios de Better Comments
    "better-comments.tags": [
