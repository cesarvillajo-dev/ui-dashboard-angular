        },
        {
            "tag": "//",
            "color": "#A75FD6"
        },
        {
            "tag": "*",
            "color": "#98C379"
        },
        {
            "tag": "todo",
            "color": "#FF8C00"
        },
        {
            "tag": "fixme",
            "color": "#FD79A8"
        },
        {
            "tag": "custom",
            "color": "#FD79A8"
        },
        {
            "tag": "creado",
            "color": "#FD79A8"
        },
        {
            "tag": "modified",
            "color": "#FD79A8"
        },
        {
            "tag": "modificado",
